<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.friends.HistoryController" spacing="10" alignment="CENTER" prefWidth="600" prefHeight="400" style="-fx-padding: 20;">
    <!-- Title -->
    <Label text="Calculation History" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <!-- TableView -->
    <TableView fx:id="historyTable" prefWidth="600" prefHeight="400">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="50" />
            <TableColumn text="Expression" fx:id="expressionColumn" prefWidth="200" />
            <TableColumn text="Result" fx:id="resultColumn" prefWidth="100" />
            <TableColumn text="Timestamp" fx:id="timestampColumn" prefWidth="250" />
        </columns>
    </TableView>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Delete" onAction="#handleDelete" />
        <Button text="Delete All" onAction="#handleDeleteAll" />
        <Button text="Close" onAction="#handleClose" />
    </HBox>
</VBox>
